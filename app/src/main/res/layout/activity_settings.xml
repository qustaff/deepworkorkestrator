<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/keywordsEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Słowa kluczowe (przecinek)"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/playlistEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Spotify URI"
        app:layout_constraintTop_toBottomOf="@id/keywordsEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/appsEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Blokowane pakiety (przecinek)"
        app:layout_constraintTop_toBottomOf="@id/playlistEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hasło blokady (opcjonalnie zmień)"
        app:layout_constraintTop_toBottomOf="@id/appsEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/saveBtn"
        android:text="Zapisz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>